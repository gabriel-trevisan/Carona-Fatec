<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gabriel.carona_fatec.CadastroActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="@string/nome"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/textView7"
        android:layout_alignEnd="@+id/textView7" />

    <EditText
        android:id="@+id/edtNome"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edtNome"
        android:layout_alignStart="@+id/edtNome"
        android:layout_below="@+id/edtNome"
        android:text="@string/email"
        android:textStyle="bold"
        android:layout_marginTop="5dp"/>

    <EditText
        android:id="@+id/edtEmail"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/exemplo_email"
        android:inputType="textPersonName"
        android:layout_below="@+id/textView7"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginTop="5dp"
        android:layout_alignRight="@+id/edtNome"
        android:layout_alignEnd="@+id/edtNome" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edtEmail"
        android:layout_alignStart="@+id/edtEmail"
        android:layout_below="@+id/edtEmail"
        android:text="@string/senha"
        android:textStyle="bold"
        android:layout_marginTop="5dp"/>

    <EditText
        android:id="@+id/edtSenha"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:layout_below="@+id/textView8"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/confirmar_senha"
        android:textStyle="bold"
        android:layout_below="@+id/edtSenha"
        android:layout_alignLeft="@+id/edtSenha"
        android:layout_alignStart="@+id/edtSenha"
        android:layout_marginTop="5dp"/>

    <EditText
        android:id="@+id/edtConfirmarSenha"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_below="@+id/textView9"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9"
        android:layout_marginTop="5dp"
        android:layout_alignRight="@+id/edtSenha"
        android:layout_alignEnd="@+id/edtSenha" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/turma"
        android:textStyle="bold"
        android:layout_below="@+id/edtConfirmarSenha"
        android:layout_alignLeft="@+id/edtConfirmarSenha"
        android:layout_alignStart="@+id/edtConfirmarSenha"
        android:layout_marginTop="5dp"/>

    <Spinner
        android:id="@+id/spinner_turmas"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView10"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:layout_alignRight="@+id/edtConfirmarSenha"
        android:layout_alignEnd="@+id/edtConfirmarSenha"
        android:layout_marginTop="5dp"/>

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/numero_celulas"
        android:textStyle="bold"
        android:layout_below="@+id/spinner_turmas"
        android:layout_alignLeft="@+id/spinner_turmas"
        android:layout_alignStart="@+id/spinner_turmas"
        android:layout_marginTop="5dp"/>

    <EditText
        android:id="@+id/edtNumeroCelular"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:hint="@string/exemplo_numero_celular"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/textView11"
        android:layout_alignLeft="@+id/spinner_turmas"
        android:layout_alignStart="@+id/spinner_turmas"
        android:layout_alignRight="@+id/spinner_turmas"
        android:layout_alignEnd="@+id/spinner_turmas" />

    <Button
        android:id="@+id/btnCadastrar"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:text="@string/cadastro"
        android:textColor="@color/colorBranco"
        android:background="@color/colorVerde"
        android:onClick="cadastrarUsuario"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/edtNumeroCelular"
        android:layout_alignStart="@+id/edtNumeroCelular"
        android:layout_marginBottom="12dp" />

</RelativeLayout>
