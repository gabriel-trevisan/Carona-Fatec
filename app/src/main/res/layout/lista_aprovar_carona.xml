<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_resultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:textColor="@color/colorPreto"
        android:text="-"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:srcCompat="@drawable/mais_detalhes"
        android:layout_below="@+id/tv_resultado"
        android:layout_alignLeft="@+id/tv_resultado"
        android:layout_alignStart="@+id/tv_resultado"
        android:layout_marginTop="12dp"
        android:clickable="true"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/textView31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mais detalhes"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/imageView15"
        android:layout_toRightOf="@+id/imageView15"
        android:layout_toEndOf="@+id/imageView15"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="3dp"
        android:layout_marginStart="10dp" />

</RelativeLayout>